server {
	listen   80 default;
	server_name  newdjangosite.com www.newdjangosite.com;

	access_log  /var/log/nginx/localhost.access.log;

	location / {
		root /var/www/python/newdjangosite-prod/config/shutdown;
	}

	error_page 404 /index.html;
}

